<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="contenfulsyncapi.MainPage"
             NavigationPage.HasNavigationBar="True"
             Title="Client Connection Parameters">
    <StackLayout Orientation="Vertical" Padding="10, 10, 10, 10">
        <Label Text="Space ID"/>
        <Entry Text="{Binding SpaceId}"/>
        <Label Text="Access Token"/>
        <Entry Text="{Binding AccessToken}"/>
        <Label Text="Environment"/>
        <Entry Text="{Binding Environment}"/>
        <Button x:Name="btn_Next" Clicked="btn_Next_Clicked" Text="Next"/>
    </StackLayout>

</ContentPage>
