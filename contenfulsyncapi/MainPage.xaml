<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="contenfulsyncapi.MainPage"
             NavigationPage.HasNavigationBar="True"
             Title="Contentful APIs Demo">
    <StackLayout Orientation="Vertical" Padding="10, 10, 10, 10">
        <Label Text="Space ID"/>
        <Entry x:Name="entry_space" Text="{Binding SpaceId}"/>
        <Label Text="Access Token"/>
        <Entry x:Name="entry_accessToken" Text="{Binding AccessToken}"/>
        <Label Text="Environment"/>
        <Entry x:Name="entry_environment" Text="{Binding Environment}"/>
        <Button x:Name="btn_InitializeClient" Clicked="btn_InitializeClient_Clicked" Text="Initialize Client"/>
    </StackLayout>

</ContentPage>
